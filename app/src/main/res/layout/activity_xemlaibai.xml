<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/maunen"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".activity.user.XemlaibaiActivity">
    <TextView
        android:id="@+id/xemlai_NameCate"
        android:text="Môn học"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi số "
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/xemlai_number"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/25"
            android:textSize="24dp"
            android:textStyle="bold" />

    </LinearLayout>
    <!-- Nội dung của câu hỏi -->
    <TextView
        android:id="@+id/xemlai_QuestionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đây là nội dung của câu hỏi"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"/>

    <!-- Các lựa chọn cho câu hỏi -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/xemlai_btDapan1"
            android:text="Đáp án 1"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:background="@drawable/botrondapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/xemlai_btDapan2"
            android:text="Đáp án 2"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:background="@drawable/botrondapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/xemlai_btDapan3"
            android:text="Đáp án 3"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:background="@drawable/botrondapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/xemlai_btDapan4"
            android:text="Đáp án 4"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:background="@drawable/botrondapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/xemlai_btNext"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi kế tiếp" />
        <Button
            android:id="@+id/xemlai_btBack"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi trước" />
    </LinearLayout>

</LinearLayout>
